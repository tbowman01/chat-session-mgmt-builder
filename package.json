{
  "name": "chat-session-mgmt-builder",
  "version": "2.0.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:server\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:server": "cd server && npm run dev",
    "server": "cd server && npm run dev",
    "build": "npm run build:frontend && npm run build:server",
    "build:frontend": "cd frontend && npm run build",
    "build:server": "cd server && npm run build",
    "test": "cd frontend && npm test",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:report": "playwright show-report",
    "test:e2e:install": "playwright install",
    "test:e2e:auth": "playwright test tests/e2e/specs/auth.spec.ts",
    "test:e2e:wizard": "playwright test tests/e2e/specs/wizard.spec.ts",
    "test:all": "npm run test && npm run test:e2e",
    "lint": "eslint frontend/src server/src --ext .ts,.tsx --ignore-path .gitignore",
    "typecheck": "cd frontend && npm run typecheck && cd ../server && npm run typecheck"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0"
  },
  "workspaces": [
    "frontend",
    "server"
  ],
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0"
  }
}
